/* Grid System
 */

pad = 15px

.container
  padding-left: pad
  padding-right: pad
  margin-left: auto;
  margin-right: auto;
  @extend .clearfix


.grid,
.grid-r
  margin-left: - pad;
  margin-right: - pad;
  @extend .clearfix

[class*='col-']
  position: relative
  min-height: 1px
  padding-left: pad
  padding-right: pad
  float: left

.nopad
  padding-left: 0
  padding-right: 0

.grid-r >
  .col-1-12,
  .col-1-6,
  .col-1-4,
  .col-1-3,
  .col-5-12,
  .col-1-2,
  .col-7-12,
  .col-2-3,
  .col-3-4,
  .col-5-6,
  .col-11-12,
  .col-1
    width:100%

.grid >
  .col-1-12
    width: 8.33333333%
  .col-1-6
    width: 16.66666666%
  .col-1-4
    width: 25%
  .col-1-3
    width: 33.33333333%
  .col-5-12
    width: 41.66666666%
  .col-1-2
    width: 50%
  .col-7-12
    width: 58.33333333%
  .col-2-3
    width: 66.66666666%
  .col-3-4
    width: 75%
  .col-5-6
    width: 83.33333333%
  .col-11-12
    width: 91.66666666%
  .col-1
    width: 100%

/* Responsive: Tablets and up */
@media screen and (min-width: 768px)
  .container
    max-width: 728px;

  .grid-r >
    .col-1-12
      width: 8.33333333%
    .col-1-6
      width: 16.66666666%
    .col-1-4
      width: 25%
    .col-1-3
      width: 33.33333333%
    .col-5-12
      width: 41.66666666%
    .col-1-2
      width: 50%
    .col-7-12
      width: 58.33333333%
    .col-2-3
      width: 66.66666666%
    .col-3-4
      width: 75%
    .col-5-6
      width: 83.33333333%
    .col-11-12
      width: 91.66666666%
    .col-1
      width: 100%


@media screen and (min-width: 960px)
  .container
    max-width: 860px;
